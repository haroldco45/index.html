<body>

    <div class="container">
        <h1>LA BARBERIA</h1>
        
        <form id="formCita">
            <div class="form-group">
                <label>Nombre del Cliente</label>
                <input type="text" id="nombre" placeholder="Nombre completo" required>
            </div>

            <div class="form-group">
                <label>Servicio</label>
                <select id="servicio" required>
                    <option value="Corte de Cabello">Corte de Cabello</option>
                    <option value="Arreglo de Barba">Arreglo de Barba</option>
                    <option value="Combo (Corte + Barba)">Combo (Corte + Barba)</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fecha</label>
                <input type="date" id="fecha" required>
            </div>

            <div class="form-group">
                <label>Hora</label>
                <input type="time" id="hora" required>
            </div>

            <button type="submit" class="btn-enviar">RESERVAR CITA</button>
        </form>

        <div class="citas-list">
            <h2>Citas Guardadas</h2>
            <div id="contenedorCitas"></div>
        </div>
    </div>

    <script>
        const form = document.getElementById('formCita');
        const contenedor = document.getElementById('contenedorCitas');
        
        // --- CONFIGURA TU NÃšMERO AQUÃ ---
        const miTelefono = "573000000000"; // Reemplaza por tu nÃºmero real

        // Cargar citas al abrir la app
        window.onload = mostrarCitas;

        form.addEventListener('submit', (e) => {
            e.preventDefault();

            const nuevaCita = {
                id: Date.now(),
                nombre: document.getElementById('nombre').value,
                servicio: document.getElementById('servicio').value,
                fecha: document.getElementById('fecha').value,
                hora: document.getElementById('hora').value
            };

            // Guardar en LocalStorage
            let citas = JSON.parse(localStorage.getItem('misCitas')) || [];
            citas.push(nuevaCita);
            localStorage.setItem('misCitas', JSON.stringify(citas));

            // Enviar WhatsApp
            const texto = `Â¡Hola LA BARBERIA! Quiero agendar:%0AðŸ‘¤ *Nombre:* ${nuevaCita.nombre}%0Aâœ‚ï¸ *Servicio:* ${nuevaCita.servicio}%0AðŸ“… *Fecha:* ${nuevaCita.fecha}%0Aâ° *Hora:* ${nuevaCita.hora}`;
            window.open(`https://wa.me/${miTelefono}?text=${texto}`);

            form.reset();
            mostrarCitas();
        });

        function mostrarCitas() {
            let citas = JSON.parse(localStorage.getItem('misCitas')) || [];
            contenedor.innerHTML = '';
            
            citas.forEach(cita => {
                contenedor.innerHTML += `
                    <div class="cita-item">
                        <button class="btn-borrar" onclick="borrarCita(${cita.id})">Ã—</button>
                        <strong>${cita.nombre}</strong><br>
                        <small>${cita.servicio}</small><br>
                        <small>${cita.fecha} a las ${cita.hora}</small>
                    </div>
                `;
            });
        }

        function borrarCita(id) {
            let citas = JSON.parse(localStorage.getItem('misCitas'));
            citas = citas.filter(c => c.id !== id);
            localStorage.setItem('misCitas', JSON.stringify(citas));
            mostrarCitas();
        }
    </script>
